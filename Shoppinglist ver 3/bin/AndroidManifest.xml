<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.byron.shoppinglist"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.byron.shoppinglist.ShoppinglistActivity"
            android:launchMode="standard">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />                
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.byron.shoppinglist.SearchableActivity"
            	  android:parentActivityName="com.byron.shoppinglist.ShoppinglistActivity" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
            <meta-data android:value="com.byron.shoppinglist.ShoppinglistActivity" android:name="android.support.PARENT_ACTIVITY"/>
        </activity>
        <activity
            android:name="com.byron.shoppinglist.HistoryActivity"
            android:label="@string/title_activity_history" >
        </activity>
    </application>

</manifest>
